[Unit]
Description=JBoss EAP 7
After=NetworkManager.service

[Service]
Type=forking
Environment=JBOSS_CONF={{ jboss_eap_home_path }}/bin/init.d/eap.conf
ExecStart={{ jboss_eap_home_path }}/bin/init.d/jboss-eap-rhel.sh start
ExecStop={{ jboss_eap_home_path }}/bin/init.d/jboss-eap-rhel.sh stop
ExecReload=/{{ jboss_eap_home_path }}/bin/init.d/jboss-eap-rhel.sh restart

[Install]
WantedBy=multi-user.target